---
import Layout from '../layouts/Layout.astro';
import Card from '../components/card';
import Header from '../components/header';
import Content from '../components/content';
import bg from '../images/wuppertal-machine.svg';
import { BackgroundImage } from '../components/background-image';
import Register from '../components/register';
---

<Layout title="Wuppertal Fastener Days">
    <!-- <BackgroundImage className="-bottom-14 -top-36"> -->
    <main
        class='min-h-screen justify-center bg-cover bg-center bg-no-repeat bg-[url("../../public/machine.svg")]'
    >
        <Header client:visible />
        <div class="pt-2 md:pt-20">
            <Content />
        </div>
        <div class="mx-auto max-w-5xl px-4 mb-6 mt-6 block md:hidden">
            <Register client:visible />
        </div>
        <Card />
    </main>
    <!-- </BackgroundImage> -->
</Layout>
